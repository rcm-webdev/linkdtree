---
import * as CONTENT from "../pages/content";
import AccordionLayout from "../layouts/AccordionLayout.astro";
import Card from "./Card.astro";
import Projects from "./Projects.astro";
import NowCard from "./NowCard.astro";
---

<ul class="shadow-box">
  <Projects />
  <AccordionLayout title={"About"} icon={"mdi:person-box-outline"}>
    {CONTENT.about}
    <p>
      <a href="#work" class="text-[#AAC4E7]">@ninetyfivedesigns</a> and <a
        href="https://100devs.org"
        target="_blank"
        class="text-[#AAC4E7]">@100devs</a
      > .
    </p>
  </AccordionLayout>
  <AccordionLayout title={"Work"} icon={"mdi:code-block-tags"}>
    {
      CONTENT.work.map((item) => {
        return (
          <Card
            title={item.role}
            timeframe={`${item.from} - ${item.to}`}
            description={item.location}
            tags={item.skills}
            url={item.org_url}
            url_name={item.org}
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Projects"} icon={"mdi:folder-text-outline"}>
    {
      CONTENT.projects.map((item) => {
        return (
          <Card
            title={item.title}
            timeframe={`${item.from} - ${item.to}`}
            description={item.description}
            tags={item.tech}
            url={item.url}
            url_name={"Open Project"}
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Now"} icon={"mdi:lightning-bolt"}>
    <p class="text-text/20">Last Updated: {CONTENT.formattedDate}</p>
    {
      CONTENT.now.map((item) => {
        return (
          <NowCard
            title={item.title}
            list={item.list}
            url_name={item.url_name}
            url={item.url}
          />
        );
      })
    }
    <p class="text-[#EBEBDF] text-center mt-5">
      Follow my journey on <a href="/" class="text-[#AAC4E7]">Twitter</a>
    </p>
  </AccordionLayout>
  <AccordionLayout title={"Stack"} icon={"ri:stack-line"} />

  <!-- <AccordionLayout title={"Education"} icon={"carbon:education"}>
      {
        CONTENT.education.map((item) => {
          return (
            <Card
              title={item.course}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={""}
              url={"#"}
              url_name={item.institute}
            />
          );
        })
      }
    </AccordionLayout> -->

  <AccordionLayout title={"Certifications"} icon={"carbon:certificate"}>
    {
      CONTENT.certificates.map((item) => {
        return (
          <Card
            title={item.title}
            timeframe={item.issued}
            description={item.org}
            tags={item.description}
            url={item.url}
            url_name={"View Certificate"}
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Blogs/Writings"} icon={"ic:round-edit-note"}>
    {
      CONTENT.blogs.map((item) => {
        return (
          <Card
            title={item.title}
            timeframe={item.date}
            description={item.description}
            tags=""
            url={item.url}
            url_name={item.publisher}
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Achievements"} icon={"mdi:trophy-award"}>
    {
      CONTENT.achievements.map((item) => {
        return (
          <Card
            title={item.title}
            timeframe={item.year}
            description={item.decription}
            tags=""
            url="#"
            url_name=""
          />
        );
      })
    }
  </AccordionLayout>

  <AccordionLayout title={"Contact"} icon={"mdi:alternate-email"}>
    {
      CONTENT.contact.map((item) => {
        return (
          <Card
            title={""}
            timeframe=""
            description=""
            tags=""
            url={item.source}
            url_name={item.source_name}
          />
        );
      })
    }
  </AccordionLayout>
</ul>
